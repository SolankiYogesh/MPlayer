<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/song_list_layout"
    android:background="@color/dark_grey"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/songimg"
        android:scaleType="centerCrop"       android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/music" />

    <TextView
        android:id="@+id/songlisttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginStart="10dp"
        android:maxLines="1"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/songimg"
        android:textSize="20sp" />
</RelativeLayout>